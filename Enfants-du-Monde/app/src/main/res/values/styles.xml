<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>


    <!--Title style-->
    <style name="TextViewTitle">
        <item name="android:textSize">@dimen/size_22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/margin_20dp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <!--Subtitle style-->
    <style name="TextViewSubTitle">
        <item name="android:textSize">@dimen/size_16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/margin_4dp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <!--ScrollView Style-->
    <style name="ScrollViewStyle">
        <item name="android:clipToPadding">false</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
    </style>

    <!--Button Items-->
    <style name="ButtonItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="icon">@drawable/ic_item</item>
        <item name="iconTint">@color/colorBlack</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/size_16sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@drawable/ripple_effect_orange</item>
    </style>

    <!--Text style-->
    <style name="TextView">
        <item name="android:justificationMode">inter_word</item>
    </style>


</resources>